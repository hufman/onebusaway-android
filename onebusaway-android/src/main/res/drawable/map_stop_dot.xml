<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White outline -->
    <item>
        <shape android:shape="oval">
            <stroke android:color="@android:color/white"
                    android:width="1dp"/>
            <size
                    android:width="@dimen/map_stop_dot_size"
                    android:height="@dimen/map_stop_dot_size"/>
        </shape>
    </item>
    <!-- Fill -->
    <item>
        <shape android:shape="oval">
            <stroke
                    android:width="1dp"
                    android:color="@android:color/transparent"/>
            <gradient
                    android:angle="90"
                    android:endColor="@color/theme_accent"
                    android:startColor="@color/theme_primary"/>
            <size
                    android:width="@dimen/map_stop_dot_size_fill"
                    android:height="@dimen/map_stop_dot_size_fill"/>
        </shape>
    </item>
</layer-list>

